{
  "$schema": "https://raw.githubusercontent.com/vicinaehq/vicinae/refs/heads/main/extra/schemas/extension.json",
  "name": "jackett-search",
  "title": "Jackett Search",
  "description": "Search torrents using Jackett API",
  "categories": [
    "Media",
    "Productivity"
  ],
  "license": "MIT",
  "author": "tinkerbells",
  "contributors": [],
  "pastContributors": [],
  "icon": "extension_icon.png",
  "version": "1.0.0",
  "commands": [
    {
      "name": "search",
      "title": "Search Torrents",
      "description": "Search torrents using Jackett",
      "mode": "view"
    }
  ],
  "preferences": [
    {
      "name": "jackett-url",
      "title": "Jackett URL",
      "description": "Jackett server URL (e.g., http://127.0.0.1:9117)",
      "type": "textfield",
      "required": true,
      "default": "http://127.0.0.1:9117"
    },
    {
      "name": "api-key",
      "title": "API Key",
      "description": "Jackett API key",
      "type": "password",
      "required": true
    },
    {
      "name": "trackers",
      "title": "Trackers",
      "description": "List of tracker names (comma-separated, e.g., The Pirate Bay,1337x,Nyaa), default = all",
      "type": "textfield",
      "required": false,
      "default": "all"
    },
    {
      "name": "default-action",
      "title": "Default Action",
      "description": "Action to perform when clicking on a torrent",
      "type": "dropdown",
      "required": false,
      "default": "magnet",
      "data": [
        {
          "title": "Open Magnet Link",
          "value": "magnet"
        },
        {
          "title": "Download Torrent File",
          "value": "torrent"
        }
      ]
    }
  ],
  "scripts": {
    "build": "vici build",
    "dev": "vici develop",
    "lint": "vici lint"
  },
  "dependencies": {
    "@vicinae/api": "^0.16.0"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "typescript": "^5.9.2"
  }
}
