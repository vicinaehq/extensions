{
  "$schema": "https://raw.githubusercontent.com/vicinaehq/vicinae/refs/heads/main/extra/schemas/extension.json",
  "name": "firefox",
  "title": "Firefox",
  "description": "Firefox integration",
  "icon": "extension-icon.svg",
  "author": "knoopx",
  "license": "MIT",
  "commands": [
    {
      "icon": "bookmarks-icon.png",
      "name": "bookmarks",
      "title": "Bookmarks",
      "description": "Search bookmarks from Firefox.",
      "mode": "view"
    },
    {
      "icon": "history-icon.png",
      "name": "history",
      "title": "History",
      "description": "Search browsing history from Firefox.",
      "mode": "view"
    }
  ],
  "dependencies": {
    "@vicinae/api": "^0.16.0",
    "fuse.js": "^7.1.0",
    "ini": "^6.0.0",
    "simple-plist": "^1.3.1",
    "sql.js": "^1.13.0"
  },
  "preferences": [
    {
      "name": "profile_dir",
      "required": false,
      "type": "textfield",
      "description": "Location from HOME of profiles for Firefox-based",
      "default": ".mozilla/firefox/",
      "title": "Profile Directory"
    }
  ],
  "scripts": {
    "build": "vici build",
    "dev": "vici develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "ray publish"
  },
  "devDependencies": {
    "@types/ini": "^4.1.1",
    "@types/sql.js": "^1.4.9"
  }
}
