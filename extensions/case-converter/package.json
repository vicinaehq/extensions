{
  "$schema": "https://raw.githubusercontent.com/vicinaehq/vicinae/refs/heads/main/extra/schemas/extension.json",
  "name": "case-converter",
  "title": "Case converter",
  "description": "Convert text to different formatting styles",
  "categories": [
    "Developer Tools",
    "Productivity"
  ],
  "license": "MIT",
  "author": "alan7a",
  "contributors": [],
  "pastContributors": [],
  "icon": "extension_icon.png",
  "commands": [
    {
      "name": "case-converter",
      "title": "Case converter",
      "subtitle": "Transform a string to different formats",
      "description": "Case converter is a tool that quickly transforms any text into the format you need. It instantly converts between styles such as snake_case, camelCase, PascalCase, kebab-case, UPPER_CASE, and other common programming formats. Ideal for developers who want to save time and maintain consistent conventions in their code.",
      "mode": "view"
    }
  ],
  "preferences": [
    {
      "name": "preserveCase",
      "type": "checkbox",
      "default": true,
      "title": "Behavior",
      "description": "Uncheck this option to first lowercase the text before applying transformations. See README for details.",
      "label": "Preserve Casing",
      "required": true
    },
    {
      "name": "preservePunctuation",
      "type": "checkbox",
      "default": false,
      "description": "Check this option to preserve punctuation marks in their original positions when changing case. This option is only available for Lower Case and Upper Case.",
      "label": "Preserve Punctuation",
      "required": false
    },
    {
      "name": "popToRoot",
      "type": "checkbox",
      "default": false,
      "description": "Usually, you only need to change the case for one text at a time - check this to pop back to root transforming the text.",
      "label": "Pop to Root After Action",
      "required": true
    },
    {
      "name": "hideHUD",
      "type": "checkbox",
      "default": false,
      "description": "Check this to hide the HUD after the action.",
      "label": "Hide HUD After Action",
      "required": false
    },
    {
      "name": "exceptions",
      "type": "textfield",
      "title": "Title and Sentence Case Exceptions",
      "description": "Words or phrases that should not be modified, separated by commas.",
      "default": "Linux",
      "placeholder": "Comma-separated list of words or phrases",
      "label": "label",
      "required": false
    },
    {
      "name": "source",
      "type": "dropdown",
      "title": "Preferred Source",
      "description": "Choose a preferred text source. If no text is selected, clipboard is used.",
      "data": [
        {
          "title": "Selected",
          "value": "selected"
        },
        {
          "title": "Clipboard",
          "value": "clipboard"
        }
      ],
      "default": "selected",
      "required": false
    },
    {
      "name": "action",
      "type": "dropdown",
      "title": "Primary Action",
      "description": "Choose whether the primary action should copy or paste the output.",
      "data": [
        {
          "title": "Copy",
          "value": "copy"
        },
        {
          "title": "Paste",
          "value": "paste"
        }
      ],
      "default": "paste",
      "required": false
    },
    {
      "name": "prefixCharacters",
      "type": "textfield",
      "title": "Prefix Characters",
      "description": "Characters to retain at the beginning of the input. Eg, `_` to keep underscores in `__typename`",
      "default": "",
      "required": false
    },
    {
      "name": "suffixCharacters",
      "type": "textfield",
      "title": "Suffix Characters",
      "description": "Characters to retain at the end of the input. Eg, `_` to keep underscores in `type_`",
      "default": "",
      "required": false
    },
    {
      "name": "CamelCase",
      "type": "checkbox",
      "title": "Enabled Transformations",
      "description": "Enable the \"camelCase\" Transformation",
      "label": "Camel Case",
      "default": true,
      "required": false
    },
    {
      "name": "CapitalCase",
      "type": "checkbox",
      "description": "Enable the \"Capital Case\" Transformation",
      "label": "Capital Case",
      "default": true,
      "required": false
    },
    {
      "name": "ConstantCase",
      "type": "checkbox",
      "description": "Enable the \"CONSTANT_CASE\" Transformation",
      "label": "Constant Case",
      "default": true,
      "required": false
    },
    {
      "name": "DotCase",
      "type": "checkbox",
      "description": "Enable the \"dot.case\" Transformation",
      "label": "Dot Case",
      "default": true,
      "required": false
    },
    {
      "name": "HeaderCase",
      "type": "checkbox",
      "description": "Enable the \"Header-Case\" Transformation",
      "label": "Header Case",
      "default": true,
      "required": false
    },
    {
      "name": "LowerCase",
      "type": "checkbox",
      "description": "Enable the \"lower case\" Transformation",
      "label": "Lower Case",
      "default": true,
      "required": false
    },
    {
      "name": "LowerFirst",
      "type": "checkbox",
      "description": "Enable the \"lower First\" Transformation",
      "label": "Lower First",
      "default": true,
      "required": false
    },
    {
      "name": "NoCase",
      "type": "checkbox",
      "description": "Enable the \"no case\" Transformation",
      "label": "No Case",
      "default": true,
      "required": false
    },
    {
      "name": "KebabCase",
      "type": "checkbox",
      "description": "Enable the \"kebab-case\" Transformation",
      "label": "Kebab Case",
      "default": true,
      "required": false
    },
    {
      "name": "KebabUpperCase",
      "type": "checkbox",
      "description": "Enable the \"KEBAB-UPPER-CASE\" Transformation",
      "label": "Kebab Upper Case",
      "default": true,
      "required": false
    },
    {
      "name": "PascalCase",
      "type": "checkbox",
      "description": "Enable the \"PascalCase\" Transformation",
      "label": "Pascal Case",
      "default": true,
      "required": false
    },
    {
      "name": "PascalSnakeCase",
      "type": "checkbox",
      "description": "Enable the \"Pascal_Snake_Case\" Transformation",
      "label": "Pascal Snake Case",
      "default": true,
      "required": false
    },
    {
      "name": "PathCase",
      "type": "checkbox",
      "description": "Enable the \"path/case\" Transformation",
      "label": "Path Case",
      "default": true,
      "required": false
    },
    {
      "name": "RandomCase",
      "type": "checkbox",
      "description": "Enable the \"rAndOm cAsE\" Transformation",
      "label": "Random Case",
      "default": true,
      "required": false
    },
    {
      "name": "SentenceCase",
      "type": "checkbox",
      "description": "Enable the \"Sentence case\" Transformation",
      "label": "Sentence Case",
      "default": true,
      "required": false
    },
    {
      "name": "SnakeCase",
      "type": "checkbox",
      "description": "Enable the \"snake_case\" Transformation",
      "label": "Snake Case",
      "default": true,
      "required": false
    },
    {
      "name": "SwapCase",
      "type": "checkbox",
      "description": "Enable the \"sWAP cASE\" Transformation",
      "label": "Swap Case",
      "default": true,
      "required": false
    },
    {
      "name": "TitleCase",
      "type": "checkbox",
      "description": "Enable the \"Title Case\" Transformation",
      "label": "Title Case",
      "default": true,
      "required": false
    },
    {
      "name": "UpperCase",
      "type": "checkbox",
      "description": "Enable the \"UPPER CASE\" Transformation",
      "label": "Upper Case",
      "default": true,
      "required": false
    },
    {
      "name": "UpperFirst",
      "type": "checkbox",
      "description": "Enable the \"Upper first\" Transformation",
      "label": "Upper First",
      "default": true,
      "required": false
    }
  ],
  "scripts": {
    "build": "vici build",
    "dev": "vici develop"
  },
  "dependencies": {
    "@vicinae/api": "^0.15.5",
    "change-case": "^5.4.4",
    "sponge-case": "^2.0.3",
    "swap-case": "^3.0.3",
    "title-case": "^4.3.2"
  },
  "devDependencies": {
    "typescript": "^5.9.3"
  }
}
